  <div class="row">
    <aside class="span4">
	      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>  
	</aside>  
 <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>

  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to SoundClone</h1>

    <h2>
      This is the home page
	  <br />

    <%= link_to "Sign up now!", signup_path, 
